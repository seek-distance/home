{
    "name": "淘宝购物车下单",
    "version": "1.0",
    "manifest_version": 2,
    "description": "The first extension that I made.",
    "author": "心向远方",
    "content_scripts": [{
        "matches": ["*://cart.taobao.com/cart.htm*","*://buy.tmall.com/order/confirm_order*","*://cashierew9.alipay.com/standard/lightpay*"],
        "js": ["js/jquery.js", "js/current.js"]
    }],
    "browser_action": {
        "default_icon": "img/icon.png"
    },
    "permissions": ["tabs"]
}